<Application
    x:Class="Arras.Windows.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arras.Windows">
    <Application.Resources>
        <SolidColorBrush Color="#FFF44336"   x:Name="primaryColor" />
        <SolidColorBrush Color="#FFD32F2F"   x:Name="primaryDarkColor" />
        <SolidColorBrush Color="#FF448AFF"   x:Name="accentColor" />
        <SolidColorBrush Color="#FFF1F5F8"   x:Name="backgroundColor" />
        <SolidColorBrush Color="#FFFFFFFF"   x:Name="whiteColor" />
        <SolidColorBrush Color="#FF575757"   x:Name="textColor" />
        <SolidColorBrush Color="#FFBDBDBD"   x:Name="secondaryTextColor" />
        <SolidColorBrush Color="#66000000"   x:Name="overlayColor" />
        <SolidColorBrush Color="#FFF3F3F3"   x:Name="bottomBarColor" />
        <SolidColorBrush Color="#FFDADADA"   x:Name="borderColor"/>

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="0,0,0,1.5" />
            <Setter Property="Background" Value="{ThemeResource whiteColor}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BorderBrush" Value="{ThemeResource borderColor}"/>
        </Style>
    </Application.Resources>
</Application>
